    </pci_devs>
    <mmio_resources>
      <TPM2>n</TPM2>
    </mmio_resources>
  </vm>
  <vm id="1">
    <vm_type>SERVICE_VM</vm_type>
    <name>ACRN Service VM</name>
    <guest_flags>
